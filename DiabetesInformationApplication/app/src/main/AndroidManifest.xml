<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hci923e18.diabetesinformationapplication">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, allowBackup">
        <meta-data
            android:name="DATABASE"
            android:value="hci923e18.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="hci923e18.database" />

        <activity
            android:name=".Tabs.FrontPageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SettingsActivity"
            android:label="DIAbetes - Profilside"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".BloodGlycoseOverview.BloodGlycoseOverviewActivity"
            android:label="DIAbetes - Blodsukkeroversigt"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".newBloodGlucoseLevelActivity"
            android:label="DIAbetes - Ny blodsukkerindtastning"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".BloodGlycoseOverview.GraphActivity"
            android:label="DIAbetes - Blodsukkeroversigt graf"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".BloodGlucoseListActivity"
            android:label="DIAbetes - Gamle blodsukkermålinger"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParentalControlActivity"
            android:label="DIAbetes - Forældrekontrol"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".GeneratePDF"
            android:label="DIAbetes - Exporter data"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LongtermMeasurements.LongtermMeasurement"
            android:label="DIAbetes - Langtidsblodsukker"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".UCI.UCI"
            android:label="Hvad gik galt"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <service android:name="hci923e18.utility.Time.TimeService" />

        <receiver
            android:name="hci923e18.utility.Time.TimeReciever"
            android:exported="true" />

        <activity
            android:name=".UCI.UCIAdvanced"
            android:label="Fortæl om din dag med appen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".OnBoarding"
            android:label="Velkommen til DIAbetes!"></activity>
        <activity
            android:name=".UCI.UCIAdvancedGoodBad"
            android:label="Fortæl om din dag med appen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" ></activity>
    </application>

</manifest>